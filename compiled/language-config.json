{
  "comments": {
    "lineComment": "%",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    [
      "(",
      ")"
    ]
  ],
  "autoClosingPairs": [
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ],
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ],
  "indentationRules": {
    "increaseIndentPattern": "(?x)\n( ^\\s* (?:begin|body|case|class|elsif|if|for|loop|process|function|procedure|proc|fcn|then)\\b\n|  \\s+ (?:then|:) \\s*$\n)",
    "decreaseIndentPattern": "(?x)\n^ \\s* end \\s+\n(?:case|elsif|if|for|loop)\\b"
  },
  "onEnterRules": [
    {
      "beforeText": "(^\\s*(?:class|module|monitor|case|elsif|elseif|if|for|loop|begin|body|process|function|procedure|proc|fcn).*?:\\s*?$)",
      "action": {
        "indent": "indent"
      }
    }
  ]
}
